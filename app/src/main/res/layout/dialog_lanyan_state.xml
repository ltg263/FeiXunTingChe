<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:background="@drawable/shape_yy_ff_all_25"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_50dp"
            android:padding="@dimen/dp_10"
            android:text="设备名称"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/dimen_12dp" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:padding="@dimen/dp_10"
            android:text="链接状态"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_12dp" />


        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:layout_marginBottom="@dimen/dimen_30dp"
            android:background="@drawable/btn_shape_theme"
            android:gravity="center"
            android:text="确  定"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dimen_16dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dimen_80dp"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_alignTop="@id/ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:background="@drawable/bj_circle_dailog"
        android:scaleType="center"
        android:src="@drawable/ic_dialog_1" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:src="@mipmap/shop4_1" />


</RelativeLayout>