<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_actionbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff">

    <com.amap.api.maps.MapView
        android:id="@+id/mMapView"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250dp"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_15dp"
                android:background="@drawable/shape_yy_ff_all_10_1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:gravity="center"
                    android:paddingVertical="@dimen/dimen_12dp"
                    android:text="停车场名称-停车场"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv1"
                    android:layout_alignBottom="@id/tv1"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_toEndOf="@id/tv1"
                    android:src="@drawable/ic_msg"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv1"
                    android:layout_alignBottom="@id/iv1"
                    android:layout_toEndOf="@id/iv1"
                    android:src="@drawable/ic_msg"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv2"
                    android:layout_alignBottom="@id/iv2"
                    android:layout_toEndOf="@id/iv2"
                    android:src="@drawable/ic_msg"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_jg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/dimen_15dp"
                    android:drawablePadding="@dimen/dimen_5dp"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/dimen_15dp"
                    android:paddingVertical="@dimen/dimen_5dp"
                    android:text="¥20/小时"
                    android:textColor="@color/color_999999"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_dw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv1"
                    android:layout_marginHorizontal="@dimen/dimen_15dp"
                    android:drawableStart="@drawable/ic_dw_x_"
                    android:drawablePadding="@dimen/dimen_5dp"
                    android:lineSpacingExtra="2dp"
                    android:text="宁波市鄞州区钱湖南路666号学府壹号C区"
                    android:textColor="@color/color_999999"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_dw"
                    android:layout_marginHorizontal="@dimen/dimen_15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:drawableStart="@drawable/ic_sj_x"
                    android:drawablePadding="@dimen/dimen_5dp"
                    android:lineSpacingExtra="2dp"
                    android:text="营业时间：9:00-24:00"
                    android:textColor="@color/color_999999"
                    android:textSize="12sp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:text="收费详情"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_1"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:text="无"
                    android:textColor="@color/color_999999"
                    android:textSize="14sp"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_2"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_30dp"
                    android:text="车场详情"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_3"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:text="无"
                    android:textColor="@color/color_999999"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_pay_bh"
                        android:drawablePadding="@dimen/dimen_5dp"
                        android:text="总泊位数："
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_cws"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/color_000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_sfbz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_pay_bh"
                        android:drawablePadding="@dimen/dimen_5dp"
                        android:text="收费标准："
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_sfbz1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_sfbz"
                        android:layout_marginStart="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="首小时+++++"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_yysj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_pay_bh"
                        android:drawablePadding="@dimen/dimen_5dp"
                        android:text="营业时间："
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_yysj1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_yysj"
                        android:layout_marginStart="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="首小时+++++"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_pay_bh"
                        android:drawablePadding="@dimen/dimen_5dp"
                        android:text="支付标准："
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_zfb" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:src="@drawable/ic_wx" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bnt_go"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll"
                android:layout_marginBottom="@dimen/dimen_30dp"
                android:layout_marginHorizontal="@dimen/dimen_30dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:background="@drawable/btn_shape_theme"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_daohao"
                    android:drawablePadding="@dimen/dimen_5dp"
                    android:padding="@dimen/dimen_12dp"
                    android:text="导航"
                    android:textColor="@color/color_ffffff"
                    android:textSize="16sp" />

            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>