<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_actionbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff">

    <com.amap.api.maps.MapView
        android:id="@+id/mMapView"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="250dp"
                android:background="@drawable/shape_theme_fff25"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_60dp">

                    <TextView
                        android:id="@+id/tv_jg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/小时"
                        android:textColor="@color/color_999999"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin_6"
                    android:text="停车场名称-停车场"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_dw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin_6"
                    android:text="宁波市鄞州区钱湖南路666号学府壹号C区"
                    android:textColor="@color/color_999999"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_15dp"
                    android:background="@drawable/shape_yy_ff_all_10_1"
                    android:padding="@dimen/dimen_15dp">

                    <ImageView
                        android:id="@+id/iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_15dp"
                        android:src="@drawable/ic_user_4" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/iv"
                        android:text="预约保证金"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv2"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:layout_toEndOf="@id/iv"
                        android:text="预约保证金在您成功履约后原路返回"
                        android:textColor="@color/color_666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvfy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="￥0"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_15dp"
                    android:background="@drawable/shape_fff_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_yy_xqc"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_10"
                        android:text="预约车辆"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/et_cph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/dimen_15dp"
                        android:hint="选择预约车辆"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/color_333333" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:drawableStart="@drawable/ic_yy_xqc"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10"
                    android:text="车辆可预约的时间"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_5dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_fff_10"
                        android:drawableStart="@drawable/ic_yy_xqc"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_10"
                        android:text="充足" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_5dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_fff_10"
                        android:drawableStart="@drawable/ic_yy_xqc"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_10"
                        android:text="紧张" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_5dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_fff_10"
                        android:drawableStart="@drawable/ic_yy_xqc"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_10"
                        android:text="不可预约" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:layout_marginHorizontal="@dimen/dimen_15dp"
                    android:background="@drawable/shape_fff_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="center"
                            android:text="日期"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/tv_rq_s"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="06:00-11:00"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_rq_x"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="11:00-16:00"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/dimen_15dp"
                        android:paddingVertical="@dimen/dimen_5dp">

                        <TextView
                            android:id="@+id/tv_rq_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="center"
                            android:text="0/00"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp" />


                        <ImageView
                            android:id="@+id/iv_rq_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/common_margin_8"
                            android:layout_weight="1"
                            android:background="@drawable/shape_eee_line_5"
                            android:padding="@dimen/dimen_5dp"
                            android:src="@drawable/ic_yy_xqc"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp" />


                        <ImageView
                            android:id="@+id/iv_rq_11"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/common_margin_8"
                            android:layout_weight="1"
                            android:background="@drawable/shape_eee_line_5"
                            android:padding="@dimen/dimen_5dp"
                            android:src="@drawable/ic_yy_xqc"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/dimen_15dp"
                        android:paddingVertical="@dimen/dimen_5dp">

                        <TextView
                            android:id="@+id/tv_rq_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="center"
                            android:text="0/00"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp" />


                        <ImageView
                            android:id="@+id/iv_rq_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/common_margin_8"
                            android:layout_weight="1"
                            android:background="@drawable/shape_eee_line_5"
                            android:padding="@dimen/dimen_5dp"
                            android:src="@drawable/ic_yy_xqc"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp" />


                        <ImageView
                            android:id="@+id/iv_rq_22"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/common_margin_8"
                            android:layout_weight="1"
                            android:background="@drawable/shape_eee_line_5"
                            android:padding="@dimen/dimen_5dp"
                            android:src="@drawable/ic_yy_xqc"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_15dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/dimen_15dp"
                        android:paddingVertical="@dimen/dimen_5dp">

                        <TextView
                            android:id="@+id/tv_rq_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="center"
                            android:text="0/00"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp" />


                        <ImageView
                            android:id="@+id/iv_rq_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/common_margin_8"
                            android:layout_weight="1"
                            android:background="@drawable/shape_eee_line_5"
                            android:padding="@dimen/dimen_5dp"
                            android:src="@drawable/ic_yy_xqc"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp" />


                        <ImageView
                            android:id="@+id/iv_rq_33"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/common_margin_8"
                            android:layout_weight="1"
                            android:background="@drawable/shape_eee_line_5"
                            android:padding="@dimen/dimen_5dp"
                            android:src="@drawable/ic_yy_xqc"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_15dp"
                    android:text="预约提示"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_15dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="@dimen/common_margin_5"
                        android:layout_height="@dimen/common_margin_5"
                        android:background="@drawable/shape_circle_e7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_5dp"
                        android:text="1.预约服务费不包含停车费"
                        android:textColor="@color/color_999999"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/common_margin_6"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="@dimen/common_margin_5"
                        android:layout_height="@dimen/common_margin_5"
                        android:background="@drawable/shape_circle_e7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_5dp"
                        android:text="2.预约成功后，您的车位将被锁定，请在车位预留时间内到达停车位"
                        android:textColor="@color/color_999999"
                        android:textSize="12sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/bnt_go"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_30dp"
                    android:background="@drawable/btn_shape_theme"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_fy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dimen_5dp"
                        android:padding="@dimen/dimen_12dp"
                        android:text="¥0 · 立即支付"
                        android:textColor="@color/color_ffffff"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="180dp"
                android:src="@drawable/ic_yy_shop" />

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>