<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4ACCE0"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal"/>


    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ll_main_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_5dp">

            <ImageView
                android:id="@+id/iv_main_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/main_home_1" />

            <TextView
                android:id="@+id/tv_main_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:text="主页"
                android:textColor="#AAAAAA"
                android:textSize="@dimen/dp_10" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_5dp">

            <ImageView
                android:id="@+id/iv_main_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/main_home_2" />

            <TextView
                android:id="@+id/tv_main_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:text="附近"
                android:textColor="#AAAAAA"
                android:textSize="@dimen/dp_10" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_5dp">

            <ImageView
                android:id="@+id/iv_main_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/main_home_3" />

            <TextView
                android:id="@+id/tv_main_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:text="我的"
                android:textColor="#AAAAAA"
                android:textSize="@dimen/dp_10" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
