<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar_common" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:src="@drawable/ic_booking_ok" />

    <TextView
        android:id="@+id/tv_zt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:text="预约成功"
        android:textColor="@color/color_333333"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_sm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginBottom="@dimen/dimen_30dp"
        android:text="即刻起车位将为您保留30分钟"
        android:textColor="@color/color_999999"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_15dp"
        android:background="@drawable/shape_fff_10"
        android:orientation="vertical"
        android:padding="@dimen/dimen_15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="预留至2020-11-15 14:45:03"
                android:textColor="@color/color_999999"
                android:textSize="13sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dimen_12dp"
                android:text="查看详情 ＞"
                android:textColor="#0199FC"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginVertical="13dp"
            android:background="@color/line_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_dz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宁波市鄞州区钱湖南路公司"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_cw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_dz"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:text="车位：D36"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_cw"
                android:layout_marginTop="@dimen/common_margin_6"
                android:text="车牌：浙B·5K123"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_fy"
                android:layout_alignBottom="@id/tv_fy"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_toStartOf="@id/tv_fy"
                android:gravity="center"
                android:text="已支付:"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_fy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_c"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/common_margin_6"
                android:text="￥20.00"
                android:textColor="@color/color_333333"
                android:textSize="18sp" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bnt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:layout_weight="1"
            android:background="@drawable/btn_shape_theme"
            android:text="导航"
            android:textColor="@color/color_ffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/bnt_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:layout_weight="1"
            android:background="@drawable/shape_theme_line_25"
            android:text="完成"
            android:textColor="@color/color_text_theme"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>