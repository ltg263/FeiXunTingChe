<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_15dp"
    android:background="@drawable/shape_fff_10"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_15dp"
        android:src="@drawable/ic_msg" />

    <View
        android:layout_width="@dimen/common_margin_6"
        android:layout_height="@dimen/common_margin_6"
        android:layout_alignTop="@id/iv"
        android:layout_alignEnd="@id/iv"
        android:background="@drawable/shape_red_all_20" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv"
        android:layout_alignBottom="@id/iv"
        android:layout_toEndOf="@id/iv"
        android:gravity="center"
        android:text="系统通知"
        android:textColor="@color/color_333333"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/dimen_15dp"
        android:text="13:50"
        android:textColor="#AAAAAA"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_marginHorizontal="@dimen/dimen_15dp"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="2dp"
        android:paddingVertical="@dimen/dp_10"
        android:text="您与2020-12-13 12:13 成功充值100元！您与成功充值100元！"
        android:textColor="#777777"
        android:textSize="14sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@id/tv_content"
        android:background="@color/line_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:drawableEnd="@mipmap/ic_jiantou_y"
        android:padding="@dimen/dimen_15dp"
        android:text="查看详情"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>