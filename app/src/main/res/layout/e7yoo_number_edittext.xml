<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/e7yoo_number_edittext_rootlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/e7yoo_number_edittext_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/e7yoo_number_edittext_tv0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/e7yoo_number_edittext_text"/>
        <TextView
            android:id="@+id/e7yoo_number_edittext_tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/e7yoo_number_edittext_text"/>
        <TextView
            android:id="@+id/e7yoo_number_edittext_tv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/e7yoo_number_edittext_text"/>
        <TextView
            android:id="@+id/e7yoo_number_edittext_tv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/e7yoo_number_edittext_text"/>
        <TextView
            android:id="@+id/e7yoo_number_edittext_tv4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/e7yoo_number_edittext_text"/>
        <TextView
            android:id="@+id/e7yoo_number_edittext_tv5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/e7yoo_number_edittext_text"/>
        <TextView
            android:id="@+id/e7yoo_number_edittext_tv6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/e7yoo_number_edittext_text"/>
        <TextView
            android:id="@+id/e7yoo_number_edittext_tv7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/e7yoo_number_edittext_text"/>
    </LinearLayout>
    <EditText
        android:id="@+id/e7yoo_number_edittext_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/e7yoo_number_edittext_layout"
        android:layout_alignTop="@id/e7yoo_number_edittext_layout"
        android:layout_alignRight="@id/e7yoo_number_edittext_layout"
        android:layout_alignBottom="@id/e7yoo_number_edittext_layout"
        android:background="@android:color/transparent"
        android:cursorVisible="false"
        android:textCursorDrawable="@null"
        android:textColor="@android:color/transparent"
        android:textColorHint="@android:color/transparent"
        android:maxLength="8" />
</RelativeLayout>