<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar_common" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_cor_white"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_10"
                    android:text="头像"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />


                <ImageView
                    android:id="@+id/riv_icon_pic"
                    android:layout_width="@dimen/dimen_45dp"
                    android:layout_height="@dimen/dimen_45dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@mipmap/ic_jiantou_y"
                    android:drawablePadding="@dimen/common_margin_5"
                    android:gravity="end"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="昵称"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_mine_nc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableEnd="@mipmap/ic_jiantou_y"
                    android:drawablePadding="@dimen/common_margin_5"
                    android:gravity="end"
                    android:text="无"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="性别"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_mine_xb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableEnd="@mipmap/ic_jiantou_y"
                    android:drawablePadding="@dimen/common_margin_5"
                    android:gravity="end"
                    android:text="无"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="生日"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_mine_sr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableEnd="@mipmap/ic_jiantou_y"
                    android:drawablePadding="@dimen/common_margin_5"
                    android:gravity="end"
                    android:text="无"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/line_color" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:layout_width="@dimen/dimen_100dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="年龄"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_mine_nl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableEnd="@mipmap/ic_jiantou_y"
                        android:drawablePadding="@dimen/common_margin_5"
                        android:gravity="end"
                        android:text="哈哈"
                        android:textColor="@color/color_666666"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:layout_width="@dimen/dimen_100dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="账号"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_mine_zh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableEnd="@mipmap/ic_jiantou_y"
                        android:drawablePadding="@dimen/common_margin_5"
                        android:gravity="end"
                        android:text="哈哈"
                        android:textColor="@color/color_666666"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:layout_width="@dimen/dimen_100dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="地区"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_mine_dq"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableEnd="@mipmap/ic_jiantou_y"
                        android:drawablePadding="@dimen/common_margin_5"
                        android:gravity="end"
                        android:text="哈哈"
                        android:textColor="@color/color_666666"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:layout_width="@dimen/dimen_80dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="简介"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/et_mine_jj"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_20dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="暂无"
                        android:textColor="@color/color_666666"
                        android:textSize="12sp" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout> 