<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_actionbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:paddingEnd="-90dp"
        android:src="@drawable/ic_cwyy_bj"/>


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:src="@mipmap/back_b" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_150dp"
        android:text="车位预约"
        android:textColor="@color/color_ffffff"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_50dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/shape_fff_10"
            android:drawableTop="@drawable/ic_cwyy_1"
            android:drawablePadding="@dimen/dimen_25dp"
            android:gravity="center"
            android:padding="@dimen/dimen_15dp"
            android:text="预约规则"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/shape_fff_10"
            android:drawableTop="@drawable/ic_cwyy_2"
            android:drawablePadding="@dimen/dimen_25dp"
            android:gravity="center"
            android:padding="@dimen/dimen_15dp"
            android:text="停车预约"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/shape_fff_10"
            android:drawableTop="@drawable/ic_cwyy_3"
            android:drawablePadding="@dimen/dimen_25dp"
            android:gravity="center"
            android:padding="@dimen/dimen_15dp"
            android:text="我的预约"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>