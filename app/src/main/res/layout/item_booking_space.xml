<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimen_15dp"
    android:layout_marginTop="@dimen/dimen_15dp"
    android:background="@drawable/shape_fff_10"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:gravity="center"
        android:paddingVertical="@dimen/dimen_12dp"
        android:text="停车场名称-停车场"
        android:textColor="@color/color_333333"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv1"
        android:layout_alignBottom="@id/tv1"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@id/tv1"
        android:src="@drawable/ic_msg" />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv1"
        android:layout_alignBottom="@id/iv1"
        android:layout_toEndOf="@id/iv1"
        android:src="@drawable/ic_msg" />

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv2"
        android:layout_alignBottom="@id/iv2"
        android:layout_toEndOf="@id/iv2"
        android:src="@drawable/ic_msg" />


    <TextView
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_30dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/dimen_15dp"
        android:background="@drawable/btn_shape_theme"
        android:gravity="center"
        android:text="预约"
        android:textColor="@color/color_ffffff"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_dw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_marginHorizontal="@dimen/dimen_15dp"
        android:drawableStart="@drawable/ic_dw_x_"
        android:drawablePadding="@dimen/dimen_5dp"
        android:lineSpacingExtra="2dp"
        android:text="宁波市鄞州区钱湖南路666号学府壹号C区"
        android:textColor="@color/color_999999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dw"
        android:layout_marginHorizontal="@dimen/dimen_15dp"
        android:layout_marginTop="7dp"
        android:drawableStart="@drawable/ic_sj_x"
        android:drawablePadding="@dimen/dimen_5dp"
        android:lineSpacingExtra="2dp"
        android:text="营业时间：9:00-24:00"
        android:textColor="@color/color_999999"
        android:textSize="12sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/tv_content"
        android:background="@color/line_color"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_margin="12dp"
        android:background="@drawable/shape_all_10_f8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimen_15dp"
            android:text="¥20/小时"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_jl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimen_15dp"
            android:text="距您200m"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_cw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimen_15dp"
            android:text="剩余车位36个"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />

    </LinearLayout>


</RelativeLayout>