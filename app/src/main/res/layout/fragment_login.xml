<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_eee_line_5">

        <EditText
            android:id="@+id/et_sjh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="phone"
            android:drawableStart="@drawable/ic_head"
            android:gravity="center"
            android:hint="请输入手机号"
            android:padding="@dimen/dimen_15dp"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/dimen_12dp"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@color/color_666666"
            android:visibility="invisible" />

        <TextView
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="获取验证码"
            android:textColor="@color/red40"
            android:textSize="@dimen/sp_14"
            android:visibility="invisible" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@drawable/shape_eee_line_5">

        <EditText
            android:id="@+id/et_pos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableStart="@drawable/ic_pos"
            android:gravity="center"
            android:inputType="textPassword"
            android:hint="请输入密码"
            android:padding="@dimen/dimen_15dp"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/dimen_12dp"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@color/color_666666"
            android:visibility="invisible" />

        <TextView
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="获取验证码"
            android:textColor="@color/red40"
            android:textSize="@dimen/sp_14"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_yzm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:visibility="gone"
        android:background="@drawable/shape_eee_line_5"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_yzm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableStart="@drawable/ic_anquan"
            android:gravity="center"
            android:hint="请输入验证码"
            android:padding="@dimen/dimen_15dp"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/dimen_12dp"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@color/color_666666" />

        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:inputType="number"
            android:text="获取验证码"
            android:textColor="@color/red40"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_fs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="验证码登录"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/dimen_12dp" />

        <View
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_wjmm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="忘记密码？"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/dimen_12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_login"
        android:layout_width="@dimen/dimen_180dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/dimen_25dp"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/btn_shape_theme"
        android:gravity="center"
        android:text="确  定"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/dimen_16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_0.5dp"
            android:layout_weight="1"
            android:background="@color/color_333333" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="第三方登录"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_0.5dp"
            android:layout_weight="1"
            android:background="@color/color_333333" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_lianxir"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="微信"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_lianxir"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="QQ"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_lianxir"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="微博"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</LinearLayout>
