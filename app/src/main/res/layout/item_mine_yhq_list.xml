<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_yhq_kybj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@mipmap/ic_mine_yhq_bj_no">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center|end">

            <TextView
                android:id="@+id/tv_yhq_qian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 200"
                android:textColor="#AAAAAA"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_yhq_syfs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_yhq_qian"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:maxLines="1"
                android:text="满200元30"
                android:textColor="#AAAAAA"
                android:textSize="10sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_40">

            <TextView
                android:id="@+id/tv_yhq_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="全部商品可用(123456)"
                android:textColor="#AAAAAA"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_yhq_sypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:maxLines="1"
                android:text="限制：(123456)"
                android:textColor="#AAAAAA"
                android:textSize="@dimen/dimen_12dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_yhq_sj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:maxLines="1"
                android:text="时间：2020-02-12"
                android:textColor="@color/color_999999"
                android:textSize="10sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_yhq_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="1"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dimen_20dp"
            android:text="立即\n使用"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_yhq_kybj_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_mine_yhq_bj_yes">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center|end">



            <TextView
                android:id="@+id/tv_yhq_qian_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 200"
                android:textColor="@color/color_333333"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_yhq_syfs_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_yhq_qian_1"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:maxLines="1"
                android:text="满200元30"
                android:textColor="@color/color_333333"
                android:textSize="10sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_40">

            <TextView
                android:id="@+id/tv_yhq_bt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="全部商品可用(123456)"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_yhq_sypt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:maxLines="1"
                android:text="限制：(123456)"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/dimen_12dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_yhq_sj_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:maxLines="1"
                android:text="时间：2020-02-12"
                android:textColor="@color/color_999999"
                android:textSize="10sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_yhq_type_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="1"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dimen_20dp"
            android:text="立即\n使用"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>

</LinearLayout>
